export default function GameDetail() {
  const { query } = useRouter();
  const slug = query.slug;
  const g = slug ? games[slug] : null;

  if (!g) return <main className="p-8">Spiel nicht gefunden.</main>;

  return (
    <main className="p-8">
      <a href="/spiele" className="underline text-sm">← Zurück zur Übersicht</a>
      <h1 className="text-3xl font-bold mt-3">{g.title}</h1>
      <p className="mt-2 max-w-2xl">{g.summary}</p>
      <ul className="mt-4 space-y-1">
        <li>👥 Spieler: {g.players}</li>
        <li>⏱ Dauer: {g.duration}</li>
        <li>🏷 Genre: {g.genre}</li>
        <li>🎯 Zielgruppe: {g.audience}</li>
        <li>🎮 Modi: {g.modes.join(", ")}</li>
      </ul>
      <div className="mt-6">
        <a href={`/buchen?spiel=${slug}`} className="inline-block px-4 py-2 rounded-md border font-semibold hover:bg-black hover:text-white transition">
          Jetzt {g.title} buchen
        </a>
      </div>
    </main>
  );
}
